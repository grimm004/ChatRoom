<Window x:Class="ChatRoom.Pages.RoomPasswordEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatRoom.Pages"
        mc:Ignorable="d"
        Title="RoomPasswordEntry" Height="115" Width="205">
    <Grid>
        <Label x:Name="passwordLabel" Content="This room requires a password:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordEntryBox" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" Width="175"/>
        <Button x:Name="submitButton" Content="Submit" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Width="75" Click="submitButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="110,49,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click"/>

    </Grid>
</Window>
